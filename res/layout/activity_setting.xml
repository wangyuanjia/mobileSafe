<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yuanjia="http://schemas.android.com/apk/res/com.yuanjia.mobilesafe"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="#000000"
        android:textSize="22sp" />

   <com.yuanjia.mobilesafe.ui.SettingItemView
       yuanjia:title="设置自动更新"
       yuanjia:desc_on="设置自动更新已经开启"
       yuanjia:desc_off="设置自动更新已经关闭"
       android:id="@+id/siv_update" 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       />
   
   <com.yuanjia.mobilesafe.ui.SettingItemView
       yuanjia:title="设置显示号码归属地"
       yuanjia:desc_on="设置显示号码归属地已经开启"
       yuanjia:desc_off="设置显示号码归属地已经关闭"
       android:id="@+id/siv_show_address" 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       ></com.yuanjia.mobilesafe.ui.SettingItemView>

   <com.yuanjia.mobilesafe.ui.SettingClickView 
       yuanjia:title="归属地提示框风格"
       android:id="@+id/scv_changebg"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       ></com.yuanjia.mobilesafe.ui.SettingClickView>
   
   
   <com.yuanjia.mobilesafe.ui.SettingItemView
       yuanjia:title="黑名单拦截设置"
       yuanjia:desc_on="黑名单拦截已经开启"
       yuanjia:desc_off="黑名单拦截已经关闭"
       android:id="@+id/siv_callsms_safe" 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       ></com.yuanjia.mobilesafe.ui.SettingItemView>
  
   <com.yuanjia.mobilesafe.ui.SettingItemView
       yuanjia:title="程序锁设置"
       yuanjia:desc_on="看门狗已经开启"
       yuanjia:desc_off="看门狗已经关闭"
       android:id="@+id/siv_watch_dog" 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       ></com.yuanjia.mobilesafe.ui.SettingItemView>

</LinearLayout>