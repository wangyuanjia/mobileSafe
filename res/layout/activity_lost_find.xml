<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="手机防盗"
        android:textColor="#000000"
        android:textSize="22sp" />

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
             
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="安全号码"
             android:textSize="20sp"
             android:textColor="#000000"
             android:layout_marginTop="8dip"
             android:layout_marginLeft="5dip"
             
            />
        <TextView 
            android:id="@+id/tv_lost_find_phone"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="xxxx"
             android:textSize="20sp"
             android:textColor="#000000"
             android:layout_marginTop="8dip"
             android:layout_marginRight="5dip"
             android:layout_alignParentRight="true"
            />
        
    </RelativeLayout>
    
    <View 
         android:layout_width="match_parent"
         android:layout_height="0.2dip"
         android:background="#44000000"
         android:layout_marginTop="10dip"
        />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="防盗保护是否开启"
             android:textSize="20sp"
             android:textColor="#000000"
             android:layout_marginTop="8dip"
             android:layout_marginLeft="5dip"
             
            />
        <ImageView 
             android:id="@+id/iv_protecting"
             android:layout_width="25dip"
             android:layout_height="25dip"
             android:src="@drawable/unlock"
             android:layout_marginTop="8dip"
             android:layout_marginRight="5dip"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
            />
        
    </RelativeLayout>
	 <View 
	        android:layout_width="match_parent"
	        android:layout_height="0.2dip"
	        android:background="#44000000"
	        android:layout_marginTop="10dip"
	       />
	 
	  
     <TextView 
         android:background="@drawable/sharp_selector"
         android:clickable="true"
         android:onClick="reEnterUpdate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="重新进入设置向导"
          android:textSize="20sp"
          android:textColor="#000000"
          android:layout_marginTop="8dip"
          android:layout_marginLeft="5dip"
          
         />
	 <View 
	        android:layout_width="match_parent"
	        android:layout_height="0.2dip"
	        android:background="#44000000"
	        android:layout_marginTop="5dip"
	       />
	 <TextView 
	      android:background="#44000000"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="功能简介"
          android:textSize="20sp"
          android:textColor="#000000"
          android:layout_marginTop="8dip"
          android:layout_marginLeft="5dip"
          
         />
	 
	  <TextView 
        android:drawableLeft="@android:drawable/star_big_on"
        style="@style/text_content_style"
        android:text="GPS追踪:#*location*#"   
       
        />
      <TextView 
        android:drawableLeft="@android:drawable/star_big_on"
        style="@style/text_content_style"
        android:text="播放报警音乐：#*alarm*#"     
        />
      <TextView 
        android:drawableLeft="@android:drawable/star_big_on"
        style="@style/text_content_style"
        android:text="远程删除数据：#*wipedata*#"     
        />
      <TextView 
        android:drawableLeft="@android:drawable/star_big_on"
        style="@style/text_content_style"
        android:text="远程锁屏:#*lockscreen*#"     
        />
	 

</LinearLayout>